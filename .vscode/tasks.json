{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Readme",
      "command": "${execPath}",
      "args": [
        "${workspaceFolder}/README.md"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "./tools/start-dev-server.sh",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "View Local Site",
      "type": "shell",
      "command": "open http://localhost:8118",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
    },
    {
      "label": "Setup Extension",
      "type": "shell",
      "command": "./tools/setup-extension.sh",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Publish Site",
      "type": "shell",
      "command": "./tools/git-commit-push.sh",
      "args": [
        "${input:commitMessage}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "View Published Site",
      "type": "shell",
      "command": "open https://raising-butterflies.pages.dev",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
    },
    {
      "label": "View Original Site",
      "type": "shell",
      "command": "open https://raisingbutterflies.org",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
    },
    {
      "label": "View GitHub Repo",
      "type": "shell",
      "command": "open https://github.com/vorth/cloudflare-test/actions",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
    },
    {
      "label": "View CloudFlare Pages",
      "type": "shell",
      "command": "open https://dash.cloudflare.com/97a1ec58ba7f64831320e12177e5889a/pages/view/raising-butterflies",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
    },
    {
      "label": "View CloudFlare R2 Bucket",
      "type": "shell",
      "command": "open https://dash.cloudflare.com/97a1ec58ba7f64831320e12177e5889a/r2/default/buckets/website-images-test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter snapshot label",
      "default": "Content update"
    }
  ]
}